  opacity: 0.1;
}
.h1 {
  font-size: 26px;
  font-weight: bold;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
}
.tag {
  font-size: 20px;
  font-weight: lighter;
  opacity: 0.6;
}
.p {
  font-size: 20px;
}

.btn {
  width: 50%;
  border-radius: 5px;
  margin-top: 5px;
  margin-bottom: 5px;
  color: white;
}
.confirm-div {
  background-color: lightskyblue;
  //padding: 20px;
  margin-right: 20px;
  margin-left: 20px;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10px;    
}
.congrats {
  display: flex;
  justify-content: center;
  align-items: center;
}
.main-container {
  background-size: cover;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  flex-direction: column;
  position: relative;
}
.buttons {
  display: flex;
  flex-direction: row;
  height: 60px;
  font-size: 16px;
  color: black !important;
  margin-top: 20px;
}
.right {
  display: flex;
  justify-content: center;
  align-items: center;
}